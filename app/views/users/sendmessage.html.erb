<div class="content" style="display: block;">
	<div style="width: 540px; margin: -30px auto auto; padding-top: 30px;">
		<div class="title1">
			Send Message
		</div>
		<div class="titleshadow1">
		</div>
		<div class="closepopup">
			<a class="close" onclick="document.getElementById('light').style.display='none';document.getElementById('fade').style.display='none';">
				<img src="/images/fancy_closebox.png">
			</a>
		</div>

		<div class="centersection1" style="background-color: #FFFFFF;">
				<form name="sendmessage" id="sendmessage" method="POST" action="/users/sendmessage">
					<input type="hidden" name="user_id" value="<%=user_id%>">
					<div style="padding-bottom:30px;border: 1px solid #E5E3E3;">
						<div class="row" >
							<div class="popuptitle" style="padding-top:25px;">
								Subject <span class="required">*</span>
							</div>
							<div class="admin_input_left">
							</div>
							<div class="admin_input_repeat" style="margin-top: 20px">
								<input type="text" style="width: 200px;" id="subject" value="" name="subject" class="validate[required]">
							</div>
							<div style="margin-right: 10px;" class="admin_input_right">
							</div>
						</div>


						<div class="row">
							<div class="popuptitle">
								Message <span class="required">*</span>
							</div>
							<div class="admin_input_left">
							</div>
							<div class="admin_input_repeat" style="margin: 50px 97px -2px;">
								<textarea name="message" id="message" cols="35" rows="8"></textarea>
							</div>
							<div style="margin-right: 10px;" class="admin_input_right">
							</div>
						</div>
						
						<div style="width: 478px;" class="profilehrline"></div>
					</div>
					<div class="row" style="padding-left:200px;">
						<div class="Interest_formdiv">
						     <div class="meet_botton_holder_inner" style="padding-top:14px;padding-bottom:0px;">
						       <div class="Meet_botton">
							 <input type="submit" class="Meet_botton_bg" value="Send" onclick="return checksendmessage();" />
						    </div>
						</div>
					</div>
				</form>
		</div>
	</div>
</div>
					
