<h1>Listing managers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Role</th>
    <th>Designation</th>
    <th>Manager</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @managers.each do |manager| %>
  <tr>
    <td><%= manager.name %></td>
    <td><%= manager.role %></td>
    <td><%= manager.designation %></td>
    <td><%= manager.manager %></td>
    <td><%= link_to 'Show', manager %></td>
    <td><%= link_to 'Edit', edit_manager_path(manager) %></td>
    <td><%= link_to 'Destroy', manager, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

