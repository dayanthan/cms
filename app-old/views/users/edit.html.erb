<%- model_class = @user.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => t('helpers.titles.edit', :model => model_class.model_name.human,
                                   :default => "Edit #{model_class.model_name.human}") %></h1>
</div>
<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :username, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :username, :class => 'text_field' %>
    </div>
  </div>
     <div class="control-group">
    <%= f.label :department, :class => 'control-label' %>
    <div class="controls">
    <%= f.collection_select :role,  Role.all, :name,:name, options ={:prompt => "Select a role"} %>
    </div>
   </div> 
   <div class="control-group">
    <%= f.label :designation, :class => 'control-label' %>
    <div class="controls">
    <%= f.collection_select :designation,  Designation.all,  :name,:name ,options ={:prompt => "Select the Designation"} %>

    </div>
   </div>  
   
<% if @user.user_type== false %>
  <div class="control-group">
    <%= f.label :is_active, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :is_active, :class => 'check_box' %>
    </div>
  </div>
  <% else %>
  <% end %>
   <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
<% end %>

