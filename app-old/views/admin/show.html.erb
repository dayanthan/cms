<%- model_class = @user.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:username) %>:</strong></dt>
  <dd><%= @user.username %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:photo) %>:</strong></dt>
  <dd><%= @user.photo %></dd></br><dd><% if !@user.photo_file_name.blank? %>
          <%= image_tag @user.photo(:small),:style=>"width:69px;height:69px;" %>
        <% else %>
          <img width="69" height="69" src="/images/nophoto.png">
        <% end %></dd>
    </dl>

<div class="form-actions">
  <%= link_to 'Edit', :controller =>"admin", :action => "edit" %>
  <%= link_to 'Back', :controller =>"admin", :action => "dotnet" %>
  
</div>


